---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

import BaseLayout from "../layout/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { meta, title } = Astro.props;
---

<BaseLayout title={`${title} | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <body>
    <Header />
    <main class="flex flex-col min-h-screen">
      <div class="bg-gray-200">
        <div class="container mx-auto px-2">
          <slot name="breadCrumbs" />
        </div>
      </div>
      <div class="container mx-auto px-2 flex-grow">
        <p class="pt-16 text-gray-500">{meta}</p>
        <h1 class="text-3xl font-bold pb-6">{title}</h1>
        <div class="grid md:grid-cols-1 grid-cols-2 gap-4">
          <slot />
        </div>
      </div>
    </main>
    <Footer />
  </body>
</BaseLayout>
